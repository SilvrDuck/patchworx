{
	"name": "Monorepo",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"bazelbuild.vscode-bazel",
				"ms-azuretools.vscode-docker",
				"ziglang.vscode-zig"
			]
		}
	},
	// "mounts": [
	// 	"source=${localWorkspaceFolder}/.devcontainer/bazel-cache,target=/home/vscode/.cache/bazel,type=bind"
	// ],
	"remoteUser": "vscode",
	"features": {
		"ghcr.io/devcontainers-extra/features/zig:1": {
			"version": "0.13.0"
		}
	}
}